        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var inst = new GlideRecord('x_ssnbv_symcode_instance');
	inst.addQuery('active', true);
	//inst.addEncodedQuery("active=true^nameLIKEdev");	
	inst.query();
	while (inst.next()) 
	{
		var pkgVersion = new GlideRecord('x_ssnbv_symcode_available_package_version');
		pkgVersion.addEncodedQuery('instance='+inst.sys_id+'^version='+current.sys_id);
		pkgVersion.query();
		if (!pkgVersion.next())
			addInstancetoVersion(current.sys_id,inst.sys_id);		
	}

	function addInstancetoVersion(packageVersion, instance)
	{
		var newVersion = new GlideRecord('x_ssnbv_symcode_available_package_version');
		newVersion.instance = instance;
		newVersion.version = packageVersion; 
		newVersion.insert();
	}

})(current, previous);]]></script>
